{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "../../dist/apps/api",
        "strict": true,
        "typeRoots": ["./types", "../../node_modules/@types"],
        "types": ["express", "node"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
